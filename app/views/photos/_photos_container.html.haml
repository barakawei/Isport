- if photos.size > 0
  .photos_container
    - if photos.size > 0
      - if photos.size == 1
        .one_photo
          - for photo in photos[0..photos.size]
            %img{ :src=> photo.url(:thumb_medium),:origin =>photo.url}
      - elsif photos.size >= 3
        - for photo in photos[0..3]
          %img{ :src=> photo.url(:thumb_medium),:origin =>photo.url}
      - else
        - for photo in photos[0..photos.size]
          %img{ :src=> photo.url(:thumb_medium),:origin =>photo.url}



