%li.comment.posted{ :id => comment.id }
  .author_avatar
    = person_image_link(comment.author,:thumb_small)
  .comment_content
    .from
      = person_link(comment.author)
      %span.details
        =":" 
      %span.comment_body
        = comment.content
    %span.time.timeago
      = how_long_ago( comment )
  .action
    - if comment.author.id == current_user.person.id
      .delete
        -if comment.instance_of?(PicComment)
          = link_to image_tag("/images/ui/delete_white.png" ),comment,:method => "delete",:remote => true
        -else
          = link_to image_tag("/images/ui/delete.png" ),comment,:method => "delete",:remote => true
