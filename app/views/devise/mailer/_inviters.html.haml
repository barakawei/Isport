%p
  - if @invs.count == 1
    = t('.has_invited_you', :name => @invs.first.sender.name )
  - else
    = t('.have_invited_you', :names => (@invs.map{|inv| inv.sender.name}.join(",")))
  = t('.accept_at', :url => root_url )
- @invs.each do |inv|
  - unless inv.message.blank?
    = "#{inv.sender.name}:"
    = "\"#{inv.message}\""
    %p

