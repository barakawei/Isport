- @invs = @resource.invitations_to_me
-if @invs.count > 0
  !!!
  %html
    %head
      %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    %body
      %header
        = image_tag AppConfig[:pod_url] + '/images/ui/logo.png'
      #container
        %p
          = t('devise.mailer.welcome', :email => @resource.email)
        = render :partial => 'inviters'

        %p= link_to t('devise.mailer.invitation.accept'), accept_invitation_url(@resource, :invitation_token => @resource.invitation_token), :class => "large_text"
        %p.small
          = t('devise.mailer.invitation.ignore')
        

