%span.logo
  %h2= t('Isport')
%ul.sections#sections
  %li
    =link_to t('home'), root_path
  %li
    =link_to t('events_link'),events_path
  %li
    =link_to t('items_link'),items_path
  %li
    %a{:href => conversations_path}
      =t( 'inbox' )
      -if current_user && @unread_message_count != 0
        %span.message_count
          %span
            %span=@unread_message_count


    %li#search
      = form_tag(people_path, :method => 'get', :id => "global_search_form") do
        = text_field_tag 'q', nil, :placeholder => t('search'), :type => 'search', :results => 5

  
-if current_user
  %ul.setting
    %li.set
      .avatar
        = person_image_tag( current_user.person,:thumb_small )
      %a{:href => "#",:class => "current_user_link"}
        .name  
          = current_user.name
        .icon
          &nbsp; &nbsp; &nbsp;

    %li
      #notification_badge
        %a{ :href => "#" }
          = "通知"
          -if current_user && @unread_notify_count != 0
            %span.message_count
              %span
                %span=@unread_notify_count 
  .accout.overlay.hide
    .accout_body.overlay_body
      %ul
        %li
          = link_to t('settings'), edit_user_path
        %li
          = link_to t('logout'), destroy_user_session_path
  #notification_dropdown
    .title
      = link_to "全部", notifications_path, :id => "view_all_notifications"
      %h4
        通知
    .notifications.avatar_panel
      .ajax_loader
        = image_tag("/images/ui/ajax-loader.gif") 


