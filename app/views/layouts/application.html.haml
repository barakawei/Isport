!!!
%html
  %head
    %title
      isport
    = include_stylesheets :default, :media => 'all'
    = include_stylesheets :blueprint, :media => 'screen'
    = include_javascripts :jquery
    = include_javascripts :main
    = include_javascripts :jqueryui
    = csrf_meta_tag
    = yield :head
     
  %body{:class => "#{yield(:body_class)}"}
    .header{:class => ( 'landing' unless current_user)}
      = render 'layouts/header' 
    .accout.hide
      = link_to t('settings'), edit_user_path
      = link_to t('logout'), destroy_user_session_path
    .container.body
      .span-24.last
        =yield 
      .span-24
        %br
        %br
        %br
    .footer
      .container

:javascript
  $(function() {
    $('.button').button();  
    if (!$.isEmptyObject($('.setting')[0])) {  
      var left = $('.setting a').offset().left;
      $('.accout').css("left", left+"px");

      $('.current_user_link').click(function(e) {
        $('.accout').toggleClass('hide');
        e.stopPropagation();
      });

      $('html').click(function(e) {
        $('.accout').addClass('hide');
      });
    }
  });
