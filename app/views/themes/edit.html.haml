- if is_admin
  .span-24
    .span-15
      %h1= t('themes.edit')
      %p#notice= notice
    .span-7
      = link_to "返回", @theme, :class => "button"
      = link_to "删除主题", url_for(:action => "delete", :id => @theme.id ), :class => "button"
  = render 'form', :is_edit => true
- else
  .span-24
    %h1= "You Can Not Edit This Theme Unless You Login As Administrator"


