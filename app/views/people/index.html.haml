-content_for :page_title do
  =t('search')
.span-24.last
  -if params[:q].blank?
    %h2
      =t('.no_results')
  -else
    %h2#search_title
      =t('.results_for')
      %span.term
        =params[:q]
.span-15.append-1
  -if @hashes.empty?
    %p
      =t('.no_one_found')
  -else
    #people_stream.stream
      -for hash in @hashes
        =render :partial => 'people/person',:locals=>hash
