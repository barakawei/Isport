-content_for :page_title do
  =t('search')
.span-24.last
  -if params[:q].blank?
    %h2
      =t('.no_results')
  -else
    %h2#search_title
      =t('.results_for')
      %span.term
        =params[:q]
.span-15.append-1
  -if @hashes.empty?
    %p
      =t('.no_one_found')
  -else
    #people_stream.stream
      -for hash in @hashes
        =render :partial => 'people/person',:locals=>hash
.facebox_content
  #add_friend_request
    %h3
      ="加为好友"      
    = form_for Request.new,:url => { :controller => 'contacts',:action => 'new' } do |r|
      = r.text_area :message , :rows => 1
      = r.hidden_field :person_id, :value => "value"
      %br
      = r.submit t('send'), :class => 'button'
:javascript
  $(function(){
  $( ".add_friend" ).click(function() {
    $( "#request_person_id" ).val( this.id );
  });
  $(".add_friend").colorbox({ inline:true, href:"#add_friend_request"});		

  });
  
