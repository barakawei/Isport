-content_for :head do
  =include_javascripts :scroll_page
  =include_javascripts :show_photo
  =include_javascripts :show_avatar
  =include_javascripts :status_message
.span-5.person_left_bar
  .avatar_panel
    #profile_photo.avatar
      = person_image_tag(@person,:thumb_large )
      .change_profile_photo.hide
        = render 'photos/change_profile_photo', :person => @person
    .information
      #followed_people
        - if @followed_people.length > 0
          .contacts
            %h4
              -if current_user.person.id == @person.id
                = "你关注的人"
              - else
                = "他关注的人"

            - for person in @followed_people
              .avatar_container
                = person_image_link(person)
            %h4
              =link_to t( 'more' ),{:controller => 'people',:action => 'show_friends'}

      #befollowed_people
        - if @befollowed_people.length > 0
          .contacts
            %h4
              -if current_user.person.id == @person.id
                = "关注你的人"
              - else
                = "关注他的人"

            - for person in @befollowed_people
              .avatar_container
                = person_image_link(person)
            %h4
              =link_to t( 'more' ),{:controller => 'people',:action => 'show_friends'}
      
      .groups
        %h4
          加入的小组
        %ul
          -for group in person.groups
            %li
              .group
                .avatar
                  = group_image_link(group,:thumb_small)
                .name
                  = object_name_link(group)
      .groups
        %h4
          喜欢的项目
        %ul
          -for item in person.interests
            %li
              .group
                .avatar
                  = item_image_link(item)
                .name
                  = object_name_link(item)

.span-15.content_panel
  #person_panel
    .person_bar
      %h2=@person.name
      .action  
        -if @person.user_id == current_user.id
          .button.edit_profile
            ="编辑个人资料"
        -elsif @contact && @contact.receiving
          .button.remove_friend
            = link_to t( 'remove_friend' ),{:controller => 'contacts', :action => 'destroy',:person_id => @person.id},:method =>'delete'
        -else
          .button.add_friend{:style=>"width:100px"}
            =link_to t('start_sharing'),{:controller => 'contacts', :action => 'create',:person_id => @person.id},:method =>'post'
      %div=@person.profile.signature

  .menu_bar
    %ul
      %li.my_events="活动"
      %li.my_posts="信息"
      %li.my_profile="个人资料"
  .stream
  .action{ :style => "display: none" }

    


:javascript
  $.get("/people/show_person_events",{person_id:#{@person.id}}  ); 
  $(".my_events").addClass( "select_on" );

  $( ".edit_profile" ).click( function(  ){
    $.get("/people/edit_profile",{person_id:#{@person.id}}  ); 
  } );

  $( ".my_events" ).live( "click",function(  ){  
    $( ".select_on" ).removeClass( "select_on" );
    $(this).addClass( "select_on" );
    $.get("/people/show_person_events",{person_id:#{@person.id}}  ); 
  } );

  $( ".my_posts" ).live( "click",function(  ){
    $( ".select_on" ).removeClass( "select_on" );
    $(this).addClass( "select_on" );
    $.get("/people/show_posts",{person_id:#{@person.id}}  ); 
  } );

  $( ".my_profile" ).live( "click",function(  ){
    $( ".select_on" ).removeClass( "select_on" );
    $(this).addClass( "select_on" );
    $.get("/people/show_person_profile",{person_id:#{@person.id}}  ); 
  } );

  $("abbr.timeago").timeago();


  

