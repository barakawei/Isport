#home_user
  = person_image_link(@person)
  %h3.push-2
    =@person.name
    .description
      -if current_user.person.id == @person.id && ( @requests_count == 0 || !@requests_count)
        = "Welcome back!"

  .avatar_panel_container
    #followed_people
      - if @followed_people.length > 0
        .link_tab
          = link_to '你关注的人',{:controller => 'people',:action => 'show_friends',:type=>'followed',:person_id =>@person.id}
        .contacts
          - for person in @followed_people[ 0...20]
            .person_avatar
              = person_image_link(person)
  .groups
    .link_tab
      = link_to '加入的小组',{:controller => 'people',:action => 'show_groups',:person_id =>@person.id}

    %ul
      -for group in current_user.person.joined_groups[ 0...5 ]
        %li
          .group
            .avatar
              = group_image_link(group,:thumb_small)
            .name
              = object_name_link(group)
  .groups
    .link_tab
      = link_to '喜欢的项目',{:controller => 'people',:action => 'show_items',:person_id =>@person.id}

    %ul
      -for item in current_user.person.interests[ 0...5 ]
        %li
          .group
            .avatar
              = item_image_link(item)
            .name
              = object_name_link(item)
    
