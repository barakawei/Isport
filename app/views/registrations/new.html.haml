-content_for :head do
  = include_javascripts :jquery_validation
.span-12.prepend-6.last
  .floating
    %h3
      = t('.sign_up_for_Isport')
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      %p  
        = f.label :email , t('email')
        = f.text_field :email, :title => t('.enter_email')
      
      %p
        = f.label :password , t('password')
        = f.password_field :password, :title => t('.enter_password') 
      %p
        = f.label :password_confirmation , t('password_confirmation')
        = f.password_field :password_confirmation, :title => t('.enter_password_again') 

      = f.submit t('.sign_up'), :class => 'button'

:javascript
  $(function() {
    $('#user_new').validate({  
      rules: {
        'user[email]': {
          required: true,
          email: true
        },
        'user[password]': {
          required: true,
          minlength: 5 
        },
        'user[password_confirmation]': {
          required: true,
          equalTo: "#user[password]"
        }
      },
      messages: {
        'user[email]': {
          required: '请输入电子邮箱',
          email: '您输入的格式不正确。 例: zhanshan@gmail.com'
        },
        'user[password]': {
          required: '请输入密码',
          minlength: '密码长度不能少于{0}位'
        },
        'user[password_confirmation]': {
          required: '请再一次输入您的密码',
          equalTo: '两次输入的密码不一致'
        }
      }
    });
  });

