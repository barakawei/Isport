-content_for :head do
  = include_stylesheets :special_pages_items_show, :media => 'all'
  = include_stylesheets :special_pages_items_index, :media => 'all'
.span-24.last
  .imageboard
    .imageheard
      .left
        = t 'items.items_list' 
      .hidebutton.last
        - if is_admin
          = link_to t('items.new_item'), new_item_path, :class => 'butten new_item'
    .imagearea
      - @items_hash.each_with_index do |item, index|
        .image
          = item_image_link(item[:item], :size => :thumb_large)
          %br
          .iteminfo
            %span.title
              = item_events_notify
              = link_to t('items.eventsthisweek', :count => item[:events_count]), event_filter_path(@city.pinyin, nil, item[:item].id, 'week') 
            %span.detail= item[:fans_count].to_s + t('items.fans')
  - if current_user
    .myitemlist
      .itemlisttitle
        = link_to t('items.myitems'), myitems_path, :class => "nounderline"
      .itemlistcontent
        - @myitems.each_with_index do |item, index|
          .itemlistrow
            .itemimage
              = item_image_link(item[:item], :size => :thumb_small)
            .itemmsg
              = link_to item[:item].name, item[:item], :class => "nounderline"
              %br
              = link_to t('items.eventsthisweek', :count => item[:count]), event_filter_path(@city.pinyin, nil, item[:item].id, 'week')

:javascript
  $(function() {
    $('.new_item').button({
      icons: {
        primary: 'ui-icon-plusthick'
      }
    });  
  });


