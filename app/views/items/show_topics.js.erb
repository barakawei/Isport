content = "<%= escape_javascript(render(:partial => 'item_topics/item_topics_container',  :locals => {:topics => @topics})) %>"; 
page = '<%=@page%>';
item_id = "<%=@item.id%>";
if (page == ''){ 
  $('.stream').html(content);
}else{
  $('.stream').append(content);
}
tab = '<%=@tab%>';
if(tab != ''  ){
  $('.current').removeClass('current');
  $('#'+tab).addClass('current');
}
$(".tab_progress").hide();
$("#item_topics").attr( "href","/items/"+item_id+"/show_topics");




