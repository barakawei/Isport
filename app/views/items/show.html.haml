-content_for :head do
  = include_stylesheets :sepcial_pages_items_show, :media => 'all'
.span-24
  .span-17
    .span-5
      = item_image_tag(@item, :thumb_large)
    .span-7.prepend-1.left_padding.right_border
      %h2= @item.name
      %p#notice= notice
      %p
        = @item.description
    .span-4.last.left_padding
      - unless is_fan_of(@item)
        %p
          = link_to t('items.like'), url_for(:action=> "add_fan", :id => @item.id), :class => "button"
        %br
          = t('items.likeinfo')
      - else
        %p
          = link_to t('items.unlike'), url_for(:action=> "remove_fan", :id => @item.id), :class => "button" 
        %br
          = t('items.unlikeinfo')
    %hr
    .span-17
      .span-12.left_padding
        = link_to t('items.edit'), edit_item_path(@item), :class => "button"
        = link_to t('items.back'),  items_path, :class => "button"
  .span-6.last
    .span-6.left_padding
      %h4= t('items.events')
    .span-6
      - @events.each_with_index do |event, index|
        .span-6
          .span-2.left_padding
            = event_image_link(event) 
          .span-3.last
            %span.event_detail= l(event.start_at, :format => :short)
            %br
            %span.event_detail= t('events.location')+":"
            =event.location
            %br
            - if event.participants.size > 0
              = t('events.short_involvement', :count => event.participants.size) + ", "
            - if event.references.size > 0
              = t('events.short_recommendation', :count => event.references.size)
        %hr


