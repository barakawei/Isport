%a
  %strong.type='活动'
  %span.title
    %strong=event.title
    %span.time_and_location
      %p.time="活动时间:" +  l(event.start_at, :format => :long)
      %p.location="活动地点:" + event.location.to_s 
  %span.info
    .owner
      =person_image_tag(event.person)
    %span.first
      %strong=event.participants.size
      %em='参加'
    %span
      %strong=event.references.size
      %em='喜欢'
    
