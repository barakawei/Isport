- content_for :head do
  = include_stylesheets :sepcial_pages_events_index, :media => 'all'
  = include_stylesheets :sepcial_pages_events_common, :media => 'all'

#city_select_box.hide    
  - City.all.each do |city|
    %h4.inline= link_to city.name, "/events/?city=#{city.pinyin}"

.span-24
  %h2.inline
    = '乐玩活动'
  %h3.inline= link_to @city.name , 'javascript:void(0);', :id => 'switch_city'
  = link_to  '发起活动', new_event_path, :class => 'button right'

-if @hot_events.size > 0
  .span-24.hot_box
    %h4.box_title='本月热门'
    %h2
    .hot_events.hottest
      #slider
        %ul
          -@hot_events.each do |e|
            %li
              = render 'hot_events', :event => e    
      - if @hot_events.size > 1
        %span#preBtn= link_to '<', 'javascript:void(0);'
        %span#nextBtn= link_to '>', 'javascript:void(0);'

.span-24.hot_box
  %h4.box_title='寻找感兴趣的活动'
  %h2
  .hot_events
    .search_line
      .filter_title
        %strong=link_to '活动', 'javascript:void(0);'
      .filter_items
        = link_to '全部', event_filter_path(:city => @city.pinyin)
                         
        - Item.all.each do |i|
          = link_to i.name, event_filter_path(@city.pinyin,@district_id, i.id, @time)
    .search_line
      .filter_title
        %strong=link_to '区域', 'javascript:void(0);' 
      .filter_items
        = link_to '全部', event_filter_path(:city => @city.pinyin, :item_id => @item_id, :time => @time)
        - @city.districts.each do |d| 
          = link_to d.name, event_filter_path(@city.pinyin, d.id, @item_id, @time)
    .search_line
      .filter_title
        %strong=link_to '时间', 'javascript:void(0);' 
      .filter_items
        = link_to '全部', event_filter_path(@city.pinyin, @district_id, @item_id, 'alltime')
        = link_to '今天', event_filter_path(@city.pinyin, @district_id, @item_id, 'today')
        = link_to '本周', event_filter_path(@city.pinyin, @district_id, @item_id, 'week')
        = link_to '周末', event_filter_path(@city.pinyin, @district_id, @item_id, 'weekends')
        = link_to '一个月内', event_filter_path(@city.pinyin, @district_id, @item_id, 'next_month')
        = link_to '时间选择', 'javascript:void(0)'

.span-24.hot_box
  %h4.box_title='推荐活动'
  %h2
  .hot_events
    -@hot_items.each do |i|
      .hot_items_events
        .item_avatar
          = item_image_link(i, :size => :thumb_large)
        = link_to '更多', event_filter_path(:city => @city.pinyin, :item_id => i.id), :class => 'right more'
        - i.events.at_city(@city.id).limit(4).each do |e|
          .item_event
            = event_image_link(e, :thumb_medium)
            .event_info
              %h4= link_to trim_info(e.title, 15), event_path(e)
              %p= l(e.start_at, :format => :long)
              .at_bottom
                %p= t('events.short_involvement', :count => e.participants.size)
      %hr


:javascript
  $(function() {
    var left = $('#switch_city').offset().left;
    var t =$('#switch_city').offset().top + $('#switch_city').innerHeight();
    $('#city_select_box').css("left", left+"px");
    $('#city_select_box').css("top", t+"px");
    $('#slider ul').css("width", "#{@hot_events.size * 908}px");
  });
  
  $('#nextBtn').bind('click', slideRight);
  $('#preBtn').bind('click', slideLeft);

  var first_li = "0px"; 
  var last_li = "-" + parseInt("#{@hot_events.size-1}") * 908 + 'px';

  function getPre(current) {
    var pre = parseInt(current.match(/\d+/)) - 908;
    if(pre == 0) {
      return pre+'px';
    }else {
      return '-' + pre + 'px'; 
    }
  }

  function getNext(current) {
    var next = parseInt(current.match(/\d+/)) + 908;
    if(next == 0) {
      return next+'px';
    }else {
      return '-' + next + 'px'; 
    }
  }

  function slideLeft() {
    $('#preBtn').unbind('click');
    var left = $('#slider ul').css('marginLeft');
    if(left == first_li) {
        $('#slider ul li:last').after($('#slider ul li:first'));
        $('#slider ul').css('marginLeft', last_li);
        $('#slider ul').animate({marginLeft: getPre(last_li)}, 300, function(){ 
          $('#preBtn').bind('click', slideLeft);
        });
    } else  {
        $('#slider ul').animate({marginLeft: getPre(left)}, 300, function(){ 
          $('#preBtn').bind('click', slideLeft);
        });
    }
  }

  function slideRight() {
    $('#nextBtn').unbind('click');
    var left = $('#slider ul').css('marginLeft');
    if (left == last_li) {
      $('#slider ul li:first').before($('#slider ul li:last'));
      $('#slider ul').css('marginLeft', first_li);
      $('#slider ul').animate({marginLeft: getNext(first_li)}, 300, function(){
        $('#nextBtn').bind('click', slideRight);
      });
    } else {
      $('#slider ul').animate({marginLeft: getNext(left)}, 300, function(){
        $('#nextBtn').bind('click', slideRight);
      });
    }
  }

  $("#switch_city").click(function(e) {
    $('#city_select_box').toggleClass('hide'); 
    e.stopPropagation();
    return false;
  });
