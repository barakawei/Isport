.span-16.colborder
  %h4.append-bottom= t("events.friend_participants", :count => @paged_friend_participants.size) + ":"
  = render "event_participants", :participants => @paged_friend_participants,
                                 :perline => 8
  .span-16.append-bottom
    = will_paginate @paged_friend_participants, pagination_options("friend_page")
  
  .span-16.prepend-top.append-bottom
    %h4= t("events.other_participants", :count => @paged_other_participants.size) + ":"
  = render "event_participants", :participants => @paged_other_participants,
                                 :perline => 8
  .span-16
    = will_paginate @paged_other_participants, pagination_options("other_page")

.span-7.last
  = link_to t("back"), event_path(@event), :class => "button" 
