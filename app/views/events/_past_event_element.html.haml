.event_box_panel
  %a{ :href => event_path( event ) }
    .event_box
      .event_border
        ="活动"
      .content
        .title
          = event.title
        .info
          .info_left
            = event_image_tag( event,:thumb_small )
            .time
              = event.start_at.strftime('%A %H:%M').to_s 
              = "-"
              = event.end_at.strftime('%H:%M').to_s
            
            .address
              = "@"+event.location.to_s
          .info_right
            .event_closed
              = image_tag( '/images/ui/event_closed_red.gif' )
          .clear

