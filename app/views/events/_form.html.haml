= form_for @event, :html => { :multipart => true } do |f|
  .span-6
    = image_tag(@event.avatar_url) if @event.avatar?
  .span-12.prepend-1.last
    -if @event.errors.any?
      #error_explanation
        %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
        %ul
          - @event.errors.full_messages.each do |msg|
            %li= msg

    .field
      = f.label t('start_at')+":"
      = f.datetime_select :start_at
    .field
      = f.label t('end_at')+":"
      = f.datetime_select :end_at
    .field
      = f.label t('event_title') +":"
      = f.text_field :title
      %br.clear
    .field
      = f.label t('event_description')+":"
      = f.text_area :description
      %br.clear
    .field
      = f.label t('location')+":"
      = f.text_field :location
      %br.clear
    .field
      = f.label t('event_subject') +":"
      = f.text_field :subject_id
      %br.clear
    .field
      = f.label t('event_pic')+":"
      = f.file_field :avatar
      = f.hidden_field :avatar_cache
      %br.clear
    .field
      = f.label t('ispublic')+":" 
      = f.check_box :ispublic
      %br.clear
    .actions
      = f.submit t('save') 
    %p 
      %h4.prepend-1.5 
        = t('event_pic') 
