.event_box_panel
  %a{ :href => event_path( event ) }
    .event_box
      .event_border
        = event.item.name
      .content
        .title
          = event.title
        .info
          .info_left
            = event_image_tag( event,:thumb_small )
            .time
              = event.start_at.strftime('%A %H:%M').to_s 
              = "-"
              = event.end_at.strftime('%H:%M').to_s
            
            .address
              = "@"+event.location.to_s
          .info_right
            .calendar_panel
              .calendar
                .month
                  =event.start_at.strftime('%m').to_s+"æœˆ"
                .day
                  =event.start_at.strftime('%d').to_s
          .clear
    .clear
