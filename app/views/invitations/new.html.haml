:javascript
  $(function() {
    $('#new_user [title]').tipsy({trigger: 'focus', gravity: ($('html').attr('dir') == 'rtl') ? 'e' : 'w'});
    $("#user_email").focus();
  });

.span-15.last.invitation
  .span-5
    = image_tag '/images/ui/logo.png', :height => "128px", :width => "128px"  
  .span-10.last
    %h2.title
      = "邀请朋友加入"
  .span-7.append-1
    #email_invitation
      = form_for User.new, :url => invitation_path(User) do |invite|
        %h4
          = t('email')
        .email
          =invite.text_field :email
        %h4
          = "说点什么"
        .message
          = invite.text_area :invite_messages, :rows => 3, :value => ""

        %p
          = invite.submit '发送邀请',:class => 'glass_button'

  %br
  %br
  - unless @sent_invitations.empty?
    .span-6.prepend-5.last
      #already_invited_pane
        %h4
          = '已邀请过'
        - for invitation in @sent_invitations
          = invitation.recipient_identifier
          = link_to '重新发送',invitation_resend_path(invitation), :confirm => '确定?'
