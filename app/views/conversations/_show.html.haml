-content_for :head do
  = include_stylesheets :special_pages_topic_comments, :media => 'all'
.last
  .conversation_participants
    .span-9
      %h3
        -if conversation.subject == ""
          = "无主题"
        -else
          = conversation.subject

      .conversation_controls
        = link_to  '回复', '#new_message'
        = link_to '删除', conversation_visibility_path(conversation), :method => 'delete',:confirm => "确定删除吗？"

    .avatars
      - for participant in conversation.participants
        .person_avatar
          = person_image_link(participant)

  %br
.span-16.last
  .stream
    = render :partial => 'messages/message', :collection => conversation.messages

    .new_comment
      = person_image_link(current_user.person,:thumb_small)

      .content
        = form_for  [conversation, Message.new] do |message|
          -if  params[ :page ] && params[:page] != ''
            = hidden_field_tag :page, params[:page]
          = message.text_area :text, :rows => 5
          .right
            = message.submit '回复', :class => 'post_button'

:javascript
  $(function() {
    $('#new_message').validate({  
      rules: {
        'message[text]': {
          required: true
        }
      },
      messages: {
        'message[text]': {
          required: '请输入回复内容'
        }
      }
    });
  });

  if( "#{@conversation.id}" !="" ){
      $( "##{@conversation.id}" ).removeClass( "unread" ).addClass( "selected" ); 
      $( "##{@conversation.id} .unread_message_count" ).addClass( "hide ");
    }
    jQuery("abbr.timeago").timeago();

