content = "<%= escape_javascript(render('home/event_container')) %>";
number = '<%=params[:page]%>' ;
if( number !='' ){
$(' .events_panel').append(content);
}else{
$(' .events_panel').html(content);
}
event_tab = '<%=@event_tab%>';
if(event_tab != ''  ){
  $( '.current' ).removeClass( 'current' );
  $( '#'+event_tab).addClass( 'current' );
  $( '#event_info' ).addClass( 'current' );
}
$( ".new_event" ).show();
$( ".event" ).show();
$( ".new_post" ).hide();
$( ".create_post" ).hide();
$( ".post_type_bar" ).hide();
$(".nav_progress").hide();
$( "#event_info" ).attr( "href","/home/show_event" );
$( "#recent_event" ).attr( "href","/home/show_event" );
$( "#my_event" ).attr( "href","/home/show_my_event" );
$( "#following_event" ).attr( "href","/home/show_following_event" );
