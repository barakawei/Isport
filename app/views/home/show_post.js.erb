content = "<%= escape_javascript(render('status_messages/status_messages_container')) %>"; 
number = '<%=params[:page]%>' ;
if( number !='' ){
$(' .events_panel').append(content);
}else{
$(' .events_panel').html(content);
}

Mention.autocompletion.initialize();
Mention.input().keydown(Mention.autocompletion.keyDownHandler);
Mention.input().keyup(Mention.autocompletion.keyUpHandler);

event_tab = '<%=@event_tab%>';
if(event_tab != ''  ){
  $( '.current' ).removeClass( 'current' );
  $( '#'+event_tab).addClass( 'current' );
}
$( ".new_event" ).hide();
$( ".event" ).hide();
$( ".new_post" ).show();
$( ".create_post" ).show();
$( ".post_type_bar" ).show();
$(".nav_progress").hide();
$( "#post" ).attr( "href","/home/show_post" );
 


