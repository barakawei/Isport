- if group.has_member?(current_user.person)
  %h5.blue.inline= t('groups.person.status.joined')+ ","
  = link_to t("groups.person.operations.exit"), membership_path(:group_id => group.id), :class => "button block", :method => :delete
- elsif group.has_pending_member?(current_user.person)  
  - if group.need_invitation
    %h5.blue= t('groups.person.status.invited') + ":"
    = link_to t("groups.person.operations.accept"), memberships_path(:group_id => group.id), :class => "button block", :method => :post
    = link_to t("groups.person.operations.refuse"), membership_path(:group_id => group.id), :class => "button block", :method => :delete
  -elsif group.need_authenticate
    %h5.blue.inline= t('groups.person.status.request_pending')
- else
  - if group.need_invitation_from_admin
    %h5.blue= t('groups.join_mode_des.invite_by_admin')
  - elsif group.need_invitation_from_member
    %h5.blue= t('groups.join_mode_des.invite_by_member') 
  - else
    = link_to t('groups.person.operations.join'), memberships_path(:group_id => group.id), 
                            :class => "button block", :method => :post 

