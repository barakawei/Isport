-content_for :head do
  = include_stylesheets :sepcial_pages_groups_common, :media => 'all'
.span-24
  = render "groups/group_nav_bar", :group => @group, :current => 'forum'
  %hr.space
  .span-18
    %h3=@topic.title
  .span-18
    = render 'topics/show'
  .span-5.last.topic_info
    .span-2
      = person_image_link(@person, :size => :thumb_large)
      %span.medium_avatar=link_to @person.name, person_path(@person)
    .span-3.last
      = link_to '关注此人', '#'
      
  .span-18.topic_comments
    %hr.space
    %h4="评论:"
    -if @comments.size > 0
      = render 'topics/comments', :person => @topic.person, 
                                  :comments => @comments, :new_comment => @new_comment, 
                                  :topic => @topic
    
