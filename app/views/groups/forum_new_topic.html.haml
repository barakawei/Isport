-content_for :head do
  = include_stylesheets :sepcial_pages_groups_common, :media => 'all'
.span-24
  = render "groups/group_nav_bar", :group => @group, :current => 'forum'
  %h2.inline= @group.name
  %h4.inline= link_to '<返回讨论区首页', forum_group_path(@group), :class => 'right back'
  %hr.space

  .span-17.prepend-1
    %h3='发表新话题:'
    = render 'topics/form', :url => group_topics_path(@group), :person => current_user.person
