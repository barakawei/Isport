-content_for :head do
  = include_stylesheets :sepcial_pages_groups_common, :media => 'all'
  = include_stylesheets :sepcial_pages_groups_show, :media => 'all'
.span-24
  .span-17
    %h2.title= @group.name
  .span-7.last
    = link_to t('back'), groups_path, :class => "button right"
  %hr
  .span-19.last
    .group_avatar
      = group_image_tag(@group, :thumb_large)
    .group_des
      .description
        %p= simple_format @group.description
  .span-5.last.group_info
    .relative
      %p
        %b= t('groups.created_at')+ ":"
        = l(@group.created_at, :format => :long)
      %p
        %b= t('groups.item')+ ":"
        = link_to @group.item.name, item_path(@group.item_id)
      %p
        %b= t('groups.city') + ":"
        = @group.city.name
      %p
        %b= t('groups.owner') + ":"
        = link_to @group.person.name, person_path(@group.person)
      = link_to "加入该小组", "#", :class => "button block"
