-content_for :head do
  = include_stylesheets :sepcial_pages_groups_common, :media => 'all'
  = include_stylesheets :forum_large, :media => 'all'
.span-24
  = render "groups/group_nav_bar", :group => @group, :current => 'forum'
.span-24
  .span-22
    %h3.inline= @group.name + '的讨论区'
    %h4.inline= link_to '<返回小组首页', group_path(@group), :class => "right"
    %hr.space
    %hr.space
    %span.block
      = link_to "发起话题", new_group_topic_path(@group), :class => "button right"
    = render "topics/index"

