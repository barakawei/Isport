-content_for :head do
  = include_stylesheets :sepcial_pages_groups_common, :media => 'all'
  = include_stylesheets :forum_large, :media => 'all'
.span-24.title_bar
  .span-17.group_logo
    .avatar
      =group_image_link(@group, :thumb_medium)
    %h2=link_to @group.name, group_path(@group)
  .span-7.last
    = render 'common/big_link_button', :content => '发起话题', :path => new_group_topic_path(@group)
.span-24.prepend-top
  = render 'common/header_box', :title => '小组讨论区'
- if @topics.size > 0
  .span-24.topics_area
    = render "topics/index"
- else
  =render :partial => 'events/new_event_link', :locals => {:question => '本小组还没有话题...'}

