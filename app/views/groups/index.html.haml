-content_for :head do
  = include_stylesheets :sepcial_pages_groups_common, :media => 'all'
  = include_stylesheets :sepcial_pages_groups_index, :media => 'all'

#city_select_box.hide    
  - City.all.each do |city|
    %h4.inline= link_to city.name, "/groups/?city=#{city.pinyin}"

.span-24
  %h2.inline= '乐玩小组'
  %h3.inline= link_to @city.name , '#', :id => 'switch_city'
  =link_to '创建小组', new_group_path, :class => 'button right'

- if @hot_groups.size > 0
  .span-24.hot_box
    %h4.app_module_title='本周热门'
    %h2
    .hot_groups
      #slider
        %ul
          - @hot_groups.each do |g|
            %li
              = render 'hottest_group', :group => g
      - if @hot_groups.size > 1
        %span#preBtn= link_to left_arrow, 'javascript:void(0);'
        %span#nextBtn= link_to right_arrow, 'javascript:void(0);'
    
.span-24.hot_box
  %h4.app_module_title='寻找你喜欢的小组'
  %h2
  .hot_groups
    .search_line
      .filter_title
        =link_to '项目', 'javascript:void(0);' 
      .filter_items
        = link_to '全部', group_filter_path(@city.pinyin)
        - Item.all.each do |i|
          = link_to i.name, group_filter_path(:city => @city.pinyin, :item_id => i.id)
    .search_line
      .filter_title
        =link_to '区域', 'javascript:void(0);' 
      .filter_items
        = link_to '全部', group_filter_path(@city.pinyin)
        - @city.districts.each do |d| 
          = link_to d.name, group_filter_path(:city => @city.pinyin, @district_id => d.id)

.span-24.hot_box
  %h4.app_module_title='推荐小组'
  %h2
  .hot_groups
    - @hot_items.each do |i|
      .hot_item_groups
        = link_to '更多', group_filter_path(:city => @city.pinyin, :item_id => i.id), :class => 'right'
        .item_avatar
          = item_image_link(i, :size => :thumb_large) 
        - i.groups.at_city(@city).limit(5).each do |g|
          .item_group
            = group_image_link(g, :thumb_large) 
            = trim_info(g.name, 9)
      %hr

:javascript
  $(function() {
    var left = $('#switch_city').offset().left;
    var t =$('#switch_city').offset().top + $('#switch_city').innerHeight();
    $('#city_select_box').css("left", left+"px");
    $('#city_select_box').css("top", t+"px");
  });

  $('#nextBtn').bind('click', slideRight);
  $('#preBtn').bind('click', slideLeft);

  var first_li = "0px"; 
  var last_li = "-" + parseInt("#{@hot_groups.size-1}") * 908 + 'px';

  function getPre(current) {
    var pre = parseInt(current.match(/\d+/)) - 908;
    if(pre == 0) {
      return pre+'px';
    }else {
      return '-' + pre + 'px'; 
    }
  }

  function getNext(current) {
    var next = parseInt(current.match(/\d+/)) + 908;
    if(next == 0) {
      return next+'px';
    }else {
      return '-' + next + 'px'; 
    }
  }


  function slideLeft() {
    $('#preBtn').unbind('click');
    var left = $('#slider ul').css('marginLeft');
    if(left == first_li) {
        $('#slider ul li:last').after($('#slider ul li:first'));
        $('#slider ul').css('marginLeft', last_li);
        $('#slider ul').animate({marginLeft: getPre(last_li)}, 300, function(){ 
          $('#preBtn').bind('click', slideLeft);
        });
    } else {
      $('#slider ul').animate({marginLeft: getPre(left)}, 300, function(){
        $('#preBtn').bind('click', slideLeft);
      });
    }
  }

  function slideRight() {
    $('#nextBtn').unbind('click');
    var left = $('#slider ul').css('marginLeft');
    if (left == last_li) {
      $('#slider ul li:first').before($('#slider ul li:last'));
      $('#slider ul').css('marginLeft', first_li);
      $('#slider ul').animate({marginLeft: getNext(first_li)}, 300, function(){
        $('#nextBtn').bind('click', slideRight);
      });
    } else {
      $('#slider ul').animate({marginLeft: getNext(left)}, 300, function(){
        $('#nextBtn').bind('click', slideRight);
      });
    }
  }

  $("#switch_city").click(function(e) {
    $('#city_select_box').toggleClass('hide'); 
    e.stopPropagation();
    return false;
  });
      
