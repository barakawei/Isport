-content_for :head do
  = include_stylesheets :sepcial_pages_groups_hottest, :media => 'all'

.group_avatar
  = group_image_link(group, :thumb_large)

.group_des
  .description
    %h3= link_to group.name, group_path(group)
    %hr
    %h4= "小组描述"
    %p= simple_format group.description

.group_info
  %p
    %b= t('groups.created_at')+ ":"
    = l(group.created_at, :format => :long)
  %p
    %b= t('groups.item')+ ":"
    = link_to group.item.name, item_path(group.item_id)
  %p
    %b= t('groups.city') + ":"
    = group.city.name
  %p
    %b= t('groups.owner') + ":"
    = link_to group.person.name, person_path(group.person)

  .static_box
    .members_count
      %p
        %h3= link_to group.members.size, members_group_path(group)
        %h4= '成员'
    .topics_count
      %p
        %h3= link_to group.topics.size, forum_group_path(group)
        %h4= '话题'
    
