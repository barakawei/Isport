- content_for :head do
  = include_stylesheets :sepcial_pages_groups_events, :media => 'all'
.span-24.title_bar
  .span-17.group_logo
    .avatar
      =group_image_link(@group, :thumb_small)
    %h2
      =link_to @group.name, group_path(@group)
      ='的活动'
  .span-7.last
    = render 'common/big_link_button', :content => '发起活动', :path => new_event_path(:group_id => @group)

.span-24.prepend-top.events_panel
  - if @events.size > 0
    =render :partial => 'events/event_element',:collection => @events,:as => :event
.span-24
  = will_paginate @events, {:previous_label => t("pagination.previous"), 
                            :next_label => t("pagination.next")}
    
    
