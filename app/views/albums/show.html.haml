- content_for :head do
  =include_javascripts :show_photo
.album_show
  .left_album_side
    = render "album_nav",:albums => @albums,:person => @person,:current_album => @album
  .album_pics_show.pic_container
    .upload_pic
      .upload_pic_btn.glass_button
        = "上传照片"
      = render "upload_pic"
    .pics
      -for pic in @pics
        = pic_image_link( pic )

:javascript
  $('.upload_pic_btn').click(function(){
    $('.pic_box').show();      
    $( ".pic_background" ).show();
  });

